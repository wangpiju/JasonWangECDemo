<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
        <div class="thumbnail">
            <%= image_tag listing.image.url %></br>
            <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price.round(2)) %></p>
                 <%= link_to 'Show', listing ,class: "btn btn-link" %>
                 <%= link_to 'Edit', edit_listing_path(listing) ,class: "btn btn-link"%>
                 <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-link" %>
            </div>
        </div>

        <br/>
        <br/>

        <%= listing.description %><br/>
        <br/>
    </div>
  <% end %>
</div>
</div>
<br>

<%= link_to 'New Listing', new_listing_path , class: "btn btn-link" %>
